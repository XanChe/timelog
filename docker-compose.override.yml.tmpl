version: '3.9'

services:  

  timelog.dev:
    
    environment:
      - ASPNETCORE_ENVIRONMENT=Development
      - ASPNETCORE_URLS=https://+:44392;http://+:80
      - ASPNETCORE_HTTPS_PORT=44392

    expose:      
      - 44392 
    volumes:
      - ./DeployConfigs/usersecrets:/root/.microsoft/usersecrets:ro
      - ./DeployConfigs/https/localhost.pfx:/root/.aspnet/https/localhost.pfx      
    depends_on:
      - postgres_db
    networks:
      - postgres
    
  proxy:
    image: nginx:latest
    volumes:
      - ./DeployConfigs/nginx/nginx.conf:/etc/nginx/nginx.conf
      - ./DeployConfigs/https/localhost.crt:/etc/nginx/localhost.crt
      - ./DeployConfigs/https/localhost.key:/etc/nginx/localhost.key
    ports:
      - 80:80
      - 443:443
    depends_on:
      - timelog.dev
    networks:
      - postgres
  postgres_db:
    container_name: postgres_db_container
    image: postgres:14.2
    command:
      - "postgres"
      - "-c"
      - "max_connections=50"
      - "-c"
      - "shared_buffers=1GB"
      - "-c"
      - "effective_cache_size=4GB"
      - "-c"
      - "work_mem=16MB"
      - "-c"
      - "maintenance_work_mem=512MB"
      - "-c"
      - "random_page_cost=1.1"
      - "-c"
      - "temp_file_limit=10GB"
      - "-c"
      - "log_min_duration_statement=200ms"
      - "-c"
      - "idle_in_transaction_session_timeout=10s"
      - "-c"
      - "lock_timeout=1s"
      - "-c"
      - "statement_timeout=60s"
      - "-c"
      - "shared_preload_libraries=pg_stat_statements"
      - "-c"
      - "pg_stat_statements.max=10000"
      - "-c"
      - "pg_stat_statements.track=all"
    environment:
      POSTGRES_DB: "timelogDb"
      POSTGRES_USER: "tester"
      POSTGRES_PASSWORD: "format"
      PGDATA: "/var/lib/postgresql/data/pgdata"
    volumes:
      - ./InitDatabase:/docker-entrypoint-initdb.d
      - ./deploy/:/var/lib/postgresql/data
    expose:
      - "5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U tester -d timelogDb"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 10s
    restart: unless-stopped
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 4G      
    networks:
        - postgres 
networks:
  postgres:
    driver: bridge
  
